<?xml version="1.0" encoding="utf-8"?>
<package name="libncurses5-dev" section="libdevel">
    <description>
        <summary>developer's libraries for ncurses</summary>
        <p>
        The ncurses library routines are a terminal-independent method of
        updating character screens with reasonable optimization.
        </p>
        <p>
        This package contains the header files, static libraries
        and symbolic links that developers using ncurses will need.
        </p>
    </description>

    <requires>
        <package name="libncurses5" version="=="/>
        <package name="ncurses-bin" version="=="/>
        <package name="libc-dev"/>
    </requires>

    <contents>
        <file src="/usr/include/*.h"/>
        <file src="/usr/lib/libncurses.so"/>
        <file src="/usr/lib/libtic.so"/>
        <file src="/usr/lib/libform.so"/>
        <file src="/usr/lib/libmenu.so"/>
        <file src="/usr/lib/libpanel.so"/>
        <file src="/usr/lib/*[^w].a"/>
    </contents>
</package>
