<?xml version="1.0" encoding="utf-8"?>
<rules>

    <prepare>
    <![CDATA[

cd $XPACK_BUILD_DIR
$XPACK_SOURCE_DIR/configure \
    --prefix=/usr \
    --libexecdir=/usr/lib \
    --disable-nls

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd $XPACK_BUILD_DIR
make

    ]]>
    </build>

    <install>
    <![CDATA[

cd $XPACK_BUILD_DIR
make DESTDIR=$XPACK_INSTALL_DIR install

cd $XPACK_INSTALL_DIR/usr/bin
rm gawk-*.* pgawk-*.*

    ]]>
    </install>

    <clean>
    <![CDATA[

rm -fr "$XPACK_SOURCE_DIR" "$XPACK_BUILD_DIR" "$XPACK_INSTALL_DIR"

    ]]>
    </clean>

</rules>
