<?xml version="1.0" encoding="utf-8"?>
<package name="libarchive1-dev" section="libdevel">
    <description>
        <summary>Single library to read/write tar, cpio, pax, zip, iso9660, etc.</summary>
        <p>
          The libarchive library provides a flexible interface for reading and
          writing streaming archive files such as tar and cpio.
        </p>
        <p>
          This package contains the development files.
        </p>
    </description>

    <requires>
        <package name="libbz2-dev"/>
        <package name="zlib1g-dev"/>
        <package name="libacl1-dev"/>
        <package name="e2fslibs-dev"/>
        <package name="libarchive1" version="=="/>
        <package name="libattr1-dev"/>
    </requires>

    <contents>
        <file src="/usr/lib/*.{so,a,la}"/>
        <file src="/usr/include/"/>
        <file src="/usr/lib/pkgconfig/"/>
    </contents>
</package>
