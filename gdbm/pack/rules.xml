<?xml version="1.0" encoding="utf-8"?>
<rules>

    <prepare>
    <![CDATA[

cd $XPACK_BUILD_DIR
CFLAGS=-g $XPACK_SOURCE_DIR/configure \
    --prefix=/usr \
    --disable-silent-rules \
    --enable-libgdbm-compat \
    --disable-nls

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd $XPACK_BUILD_DIR
make -j$XPACK_PARALLEL_JOBS

    ]]>
    </build>

    <install>
    <![CDATA[

cd $XPACK_BUILD_DIR
make DESTDIR=$XPACK_INSTALL_DIR install
ln -s ndbm.h $XPACK_INSTALL_DIR/usr/include/gdbm-ndbm.h

    ]]>
    </install>

    <clean>
    <![CDATA[

rm -fr "$XPACK_SOURCE_DIR" "$XPACK_BUILD_DIR" "$XPACK_INSTALL_DIR"

    ]]>
    </clean>

</rules>
