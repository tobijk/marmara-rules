<?xml version="1.0" encoding="utf-8"?>
<rules>

    <prepare>
    <![CDATA[

cd $XPACK_SOURCE_DIR
./configure --prefix=/usr

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd $XPACK_BUILD_DIR
make CFLAGS='-g -Wall -O2'

    ]]>
    </build>

    <install>
    <![CDATA[

cd $XPACK_BUILD_DIR
make DESTDIR=$XPACK_INSTALL_DIR install

    ]]>
    </install>

    <clean>
    <![CDATA[

rm -fr "$XPACK_SOURCE_DIR" "$XPACK_INSTALL_DIR"

    ]]>
    </clean>

</rules>
