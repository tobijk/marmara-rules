<?xml version="1.0" encoding="utf-8"?>
<package name="g++-4.5" section="devel">
    <description>
        <summary>The GNU C++ compiler</summary>
        <p>
        This is the GNU C++ compiler, a fairly portable optimizing compiler for C++.
        </p>
    </description>

    <requires>
        <package name="gcc-4.5-base" version="=="/>
        <package name="gcc-4.5" version="=="/>
        <package name="libstdc++6-4.5-dev" version="=="/>
    </requires>

    <contents>
        <!-- these are hardlinked -->
        <file src="/usr/bin/g++-4.5"/>
        <file src="/usr/bin/*-g++-4.5"/>
        <file src="/usr/lib/gcc/*/4.5/cc1plus"/>
    </contents>
</package>
