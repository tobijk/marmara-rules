<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE control [
  <!ENTITY libpcre3 SYSTEM "libpcre3.xml">
  <!ENTITY libpcrecpp0 SYSTEM "libpcrecpp0.xml">
  <!ENTITY libpcre3-dev SYSTEM "libpcre3-dev.xml">
  <!ENTITY pcregrep SYSTEM "pcregrep.xml">
  <!ENTITY rules SYSTEM "rules.xml">
  <!ENTITY changelog SYSTEM "changelog.xml">
]>
<control xmlns:xi="http://www.w3.org/2001/XInclude">

    <defines>
        <def name="XPACK_SOURCE_DIR"  value="pcre3-src"/>
        <def name="XPACK_BUILD_DIR"   value="tmp-build"/>
        <def name="XPACK_INSTALL_DIR" value="tmp-install"/>
    </defines>

    <source name="pcre3" architecture-independent="false">
        <description>
            <summary>Perl 5 Compatible Regular Expression Library - runtime files</summary>
            <p>
            This is a library of functions to support regular expressions whose syntax 
            and semantics are as close as possible to those of the Perl 5 language.
            </p>
        </description>

        <sources>
            <file src="pcre-8.21.tar.bz2"/>
        </sources>

        <requires>
        </requires>

        <!-- build rules -->
        &rules;
    </source>

    <!-- package rules -->
    &libpcre3;
    &libpcrecpp0;
    &libpcre3-dev;
    &pcregrep;

    <!-- changelog -->
    &changelog;

</control> 
